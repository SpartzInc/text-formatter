{
    "name": "spartz/text-formatter",
    "description": "A simple to use text formatter, primarily used for page/blog titles",
    "license": "MIT",
    "authors": [
        {
            "name": "Chris Gmyr",
            "email": "cgmyr@spartzinc.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : ">=5.4.0",
        "ext-mbstring" : "*"
    },
    "require-dev": {
        "phpunit/phpunit" : "4.*",
        "scrutinizer/ocular": "~1.1"
    },
    "autoload": {
        "psr-4": {
            "Spartz\\TextFormatter\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Spartz\\TextFormatter\\Test\\": "tests"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
